---
import Navbar from "../components/Navbar.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <script src="https://cdn.tailwindcss.com"></script>
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/x-icon" href="../../img/favicon.ico" />
        <link rel="stylesheet" href="./src/style.css" />

        <style>
            /* FONTS (../../fonts/) */
            @font-face {
                font-family: Arco;
                src: url(../../fonts/arco/ARCO for OSX.otf);
            }

            @font-face {
                font-family: Starborn;
                src: url(../../fonts/starborn/Starborn.otf);
            }

            @font-face {
                font-family: Nunito;
                src: url(../../fonts/Nunito/Nunito-VariableFont_wght.ttf);
            }
        </style>
    </head>
    <body
        class="bg-[url('../../img/wallpaper.jpg')] dark:bg-[url('../../img/darkwallpaper.jpg')] bg-cover bg-no-repeat mx-auto px-4 py-8 font-[Nunito] container"
    >
        <header id="aboutme" class="flex justify-center p-16">
            <ThemeToggle />
            <Navbar />
        </header>
        <slot />
